<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Calculatrice">

    <Button
        android:id="@+id/buttonPourcen"
        android:layout_width="85dp"
        android:layout_height="81dp"
        android:text="%"
        android:onClick="percentEvent"
        android:textSize="35dp"
        android:backgroundTint="#7A7575"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="189dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/buttonSlash"
        android:layout_width="85dp"
        android:layout_height="81dp"
        android:onClick="buttonEvent"
        android:text="+/-"
        android:textSize="35dp"
        android:backgroundTint="#7A7575"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="189dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonAC"
        android:layout_width="85dp"
        android:onClick="acEvent"
        android:layout_height="81dp"
        android:backgroundTint="#7A7575"
        android:text="AC"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="189dp"
        tools:ignore="MissingConstraints">
    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:backgroundTint="#000000"
        android:onClick="buttonEvent"
        android:text="7"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="293dp">
    </Button>
    <Button
        android:id="@+id/button1"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="1"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="507dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button0"
        android:layout_width="191dp"
        android:layout_height="84dp"
        android:onClick="buttonEvent"
        android:text="0"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="609dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonmoins"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:text="-"
        android:textSize="35dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="402dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button6"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="6"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="402dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonplus"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:text="+"
        android:textSize="35dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="507dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonVirgule"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:text=","
        android:onClick="buttonEvent"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="609dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonEgale"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="equalEvent"
        android:text="="
        android:textSize="35dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="609dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button3"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="3"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="507dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button2"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="2"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="507dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button4"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="4"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="402dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button9"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="9"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="293dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonfois"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="operationEvent"

        android:text="*"
        android:textSize="35dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="293dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button5"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="5"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="402dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/button8"
        android:layout_width="81dp"
        android:layout_height="85dp"
        android:onClick="buttonEvent"
        android:text="8"
        android:textSize="35dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="293dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="85dp"
        android:layout_height="81dp"
        android:onClick="operationEvent"

        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:text="/"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="189dp"
        tools:ignore="MissingConstraints">
    </Button>
    <EditText
        android:id="@+id/editText"
        android:layout_width="409dp"
        android:layout_height="135dp"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textFontWeight="10"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-3dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>


